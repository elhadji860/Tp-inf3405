import java.util.Scanner;
import java.net.InetAddress;
import java.net.InetSocketAddress;
import java.net.ServerSocket;

public class Server {
	private static ServerSocket Listener;
	
	private static InetAddress getIP(){
		Scanner input = new Scanner(System.in);
		System.out.print("rentrer l'adresse Ip du serveur : ");
		
		String entree = input.nextLine();
		boolean invalide = true;
		
		while (invalide) {
		
			try 
			{
				return InetAddress.getByName(entree);
			}
			catch(Exception e)
			{
			System.out.println("rentrer ne addresse Ip valide");
			entree = input.nextLine();
			}
		
		}
		
		input.close();
		return null ;
	}
	

	
	public static void main(String[] args) throws Exception {
		int clientNumber = 0;
		
		int serverPort = 5000;
		
		Listener = new ServerSocket();
		Listener.setReuseAddress(true);
		InetAddress serverIP = getIP();
		
		while (true) {
			try 
			{
				Listener.bind(new InetSocketAddress(serverIP, serverPort));
				break;
			}
			catch(Exception e) 
			{
				System.out.println("binding error \n reessayer");
				serverIP = getIP();
				
			}
		
		
		}
		System.out.format("the server is running on %s:%d%n", serverIP.getHostAddress(), serverPort);
		try {
			
			
			while(true) {
				new ClientHandler(Listener.accept(), clientNumber++).start();
			}
			
		}
		finally {
			Listener.close();
		}
	}
}
