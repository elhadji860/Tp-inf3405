import java.util.Scanner;
import java.net.InetAddress;
import java.net.InetSocketAddress;
import java.net.ServerSocket;

public class Server {
	private static ServerSocket Listener;
	
	private static InetAddress getIP(){
		Scanner input = new Scanner(System.in);
		System.out.print("rentrer l'adresse Ip du serveur : ");
		
		String entree = input.nextLine();
		boolean invalide = true;
		
		while (invalide) {
		
			try 
			{
				InetAddress IpAddress = InetAddress.getByName(entree);
				return IpAddress;
			}
			catch(Exception e)
			{
			System.out.print("rentrer une addresse Ip valide: ");
			entree = input.nextLine();
			}
		
		}
		
		input.close();
		return null ;
	}
	
	private static int getPort() {
		
		int port = 0;
		Scanner entree = new Scanner(System.in);
		System.out.print("rentree le numero du port: ");
		boolean invalide = true;
		while(invalide) {
			try 
			{
				port = entree.nextInt();
				if (port < 5000 || port > 5050) {
					throw new Exception("valeur invalide");
				}
				if (pory)
				return port;
			}
			catch(Exception e)
			{
				System.out.print("rentrer une valeur valide: ");
			}
		}
		entree.close();
		return port;
	}
	

	
	public static void main(String[] args) throws Exception {
		int clientNumber = 0;
		
		int serverPort = getPort();
		
		Listener = new ServerSocket();
		Listener.setReuseAddress(true);
		InetAddress serverIP = getIP();
		
		while (true) {
			try 
			{
				Listener.bind(new InetSocketAddress(serverIP, serverPort));
				break;
			}
			catch(Exception e) 
			{
				System.out.println("binding error \n reessayer");
				serverPort = getPort();
				serverIP = getIP();
				
			}
		
		
		}
		System.out.format("the server is running on %s:%d%n", serverIP.getHostAddress(), serverPort);
		try {
			
			
			while(true) {
				new ClientHandler(Listener.accept(), clientNumber++).start();
			}
			
		}
		finally {
			Listener.close();
		}
	}
}
